{
    "name": "international-labour-organization/ilo_base_theme",
    "description": "Drupal base theme for the International Labour Organization.",
    "type": "drupal-theme",
    "license": "Apache-2.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "cweagans/composer-patches": "~1.4",
        "drupal/components": "^3.0@beta",
        "drupal/twig_tweak": "^3.4",
        "drupal/ui_patterns": "^1.5",
        "drupal/ui_patterns_settings": "^2.1",
        "squirrelphp/twig-php-syntax": "^1.7"
    },
    "require-dev": {
        "composer/installers": "~1.5",
        "drupal/coder": "^8.3",
        "drupal/config_devel": "^1.9",
        "drupal/core": "^9 || ^10 || ^11",
        "drupal/core-composer-scaffold": "^9 || ^10 || ^11",
        "drupal/core-utility": "^9 || ^10 || ^11",
        "drupal/core-dev": "^9 || ^10 || ^11",
        "drupal/styleguide": "^2.1",
        "drush/drush": "~12",
        "mikey179/vfsstream": "^1.6.10",
        "openeuropa/task-runner-drupal-project-symlink": "^1.0.0-beta6",
        "phpspec/prophecy-phpunit": "^2",
        "symfony/phpunit-bridge": "^6.0"
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\ilo_base_theme\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\ilo_base_theme\\": "./tests/src/"
        }
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-project-message": true,
            "drupal/core-composer-scaffold": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true,
            "php-http/discovery": false,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        }
    }
}
